<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trabalhopoo.poo.controller.MenusController">
    <children>
        <MenuBar>
            <menus>
                <Menu text="Funcionário">
                    <items>
                        <MenuItem fx:id="menuFuncionarioInclui" onAction="#incluiFuncionarioOnAction" text="Incluir" />
                        <MenuItem fx:id="menuFuncionarioAltera" onAction="#alteraFuncionarioOnAction" text="Alterar" />
                        <MenuItem fx:id="menuFuncionarioLista" onAction="#listaFuncionarioOnAction" text="Listar" />
                        <MenuItem fx:id="menuFuncionarioExcluir" onAction="#excluirFuncionarioOnAction" text="Excluir" /> <!-- Botão de Excluir -->
                    </items>
                </Menu>
                <Menu text="Departamento">
                    <items>
                        <MenuItem fx:id="menuDepartamentoInclui" onAction="#incluiDepartamentoOnAction" text="Incluir" />
                        <MenuItem fx:id="menuDepartamentoLista" onAction="#listaDepartamentoOnAction" text="Listar" />
                        <MenuItem fx:id="menuDepartamentoExcluir" onAction="#excluirDepartamentoOnAction" text="Excluir" /> <!-- Botão de Excluir -->
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <ImageView fitHeight="374.0" fitWidth="600.0">
            <image>
                <Image url="@../image/img1.jpg" /> <!-- Altere para o caminho correto da imagem -->
            </image>
        </ImageView>
    </children>
</VBox>
